CREATE TABLE friends(
id INTEGER,
name TEXT,
birthday DATE
);

INSERT INTO friends (id, name, birthday)
VALUES (1, 'Jane Doe' , '1990-05-30');

INSERT INTO friends (id, name, birthday)
VALUES (2, 'Brittany De La Cruz' , '1990-04-18');

INSERT INTO friends (id, name, birthday)
VALUES (3, 'Angie Hsieh' , '1988-07-01');

UPDATE friends
SET name = 'Jane Smith'
Where id = '1';

ALTER TABLE friends
ADD  COLUMN email TEXT;

UPDATE friends
SET email = 'jane@codecademy.com'
Where id = '1';

UPDATE friends
SET email = 'brittdlc@gmail.com'
Where id = '2';

UPDATE friends
SET email = 'angiehsieh@outlook.com'
Where id = '3';

DELETE FROM friends
WHERE id = '1';


SELECT * FROM friends;
